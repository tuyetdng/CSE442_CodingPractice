@model List<Lab2_DangThiAnhTuyet.Models.Category>

        <div class="container mt-4">
            <table class="table table-bordered">
                <thead class="thead-dark">
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Image</th>
                        <th scope="col">Category Name</th>
                        <th scope="col">Description</th>
                        <th scope="col">Actions</th>

                    </tr>
                </thead>
                <tbody>
                    @foreach (var category in Model)
                    {
                        <tr>
					      <th scope="row">@category.Id</th>
					      <td>
						        @if (!string.IsNullOrEmpty(category.CategoryImage))
						        {
                                    <img src="@Url.Content(category.CategoryImage)" alt="@category.CategoryName" class="img-fluid  rounded-circle " style="max-width: 50px;" />
						        }
						        else
						        {
                                    <img src="~/images/no-image.jpg" alt="No Image" class="img-fluid  rounded-circle" style="max-width: 50px;" />
						        }
					      </td>
                          <td>@category.CategoryName</td>
                          <td>@category.Description</td>
                          <td>
                        <div class="d-flex gap-2">
                                <a href="@Url.Action("Edit", "Category", new { id = category?.Id ?? 0 })" class="btn btn-warning">Edit</a>
                                <form asp-controller="Category" asp-action="Delete" method="post" onsubmit="return confirm('Are you sure you want to delete this category?');">
                                    <input type="hidden" name="id" value="@category?.Id" />
                                    <button type="submit" class="btn btn-danger">Delete</button>
                                </form>
                        </div>


                          </td>
                        </tr>
                    }
                </tbody>
            </table>
    <div class="d-flex justify-content-end">
        <a href="@Url.Action("Create", "Category")" class="btn btn-primary btn-lg">Add New Category</a>

    </div>

        </div>
