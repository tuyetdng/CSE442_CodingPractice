@model List<Lab2_DangThiAnhTuyet.Models.User>

<div class="container mt-4">
    <table class="table table-bordered">
        <thead class="thead-dark">
            <tr>
                <th scope="col">#</th>
                <th scope="col">Image</th>
                <th scope="col">User name</th>
                <th scope="col">Full name</th>
                <th scope="col">Email</th>
                <th scope="col">Phone number</th>
                <th scope="col">Address</th>
                <th scope="col">Gender</th>
                <th scope="col">Actions</th>

            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <th scope="row">@user.Id</th>
                    <td>
                        @if (!string.IsNullOrEmpty(user.Avatar))
                        {
                            <img src="@Url.Content(user.Avatar)" alt="@user.Avatar" class="img-fluid  rounded-circle " style="max-width: 50px;" />
                        }
                        else
                        {
                            <img src="~/images/no-image.jpg" alt="No Image" class="img-fluid  rounded-circle" style="max-width: 50px;" />
                        }
                    </td>
                    <td>@user.UserName</td>
                    <td>@user.FullName</td>
                    <td>@user.Email</td>
                    <td>@user.PhoneNumber</td>
                    <td>@user.Address</td>
                    <td>@user.Gender</td>
                    <td>
                        <div class="d-flex gap-2">
                            <a href="@Url.Action("Edit", "User", new { id = user?.Id ?? 0 })" class="btn btn-warning">Edit</a>
                            <form asp-controller="User" asp-action="Delete" method="post" onsubmit="return confirm('Are you sure you want to delete this user?');">
                                <input type="hidden" name="id" value="@user?.Id" />
                                <button type="submit" class="btn btn-danger">Delete</button>
                            </form>
                        </div>


                    </td>
                </tr>
            }
        </tbody>
    </table>
    <div class="d-flex justify-content-end">
        <a href="@Url.Action("Create", "User")" class="btn btn-primary btn-lg">Add New User</a>

    </div>

</div>
